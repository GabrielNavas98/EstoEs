{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "outDir": "./dist",                                  
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["tailwind.config.js","next.config.mjs",".eslintrc.cjs","jest.config.js","next-env.d.ts","postcss.config.js", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "Back/test/app.test.ts.b"],
  "exclude": ["node_modules"],
  "lint": [
    {
        "exclude": [
            "*/__tests__/**/*",
        ]
    }
]
}